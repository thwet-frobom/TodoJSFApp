<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>todoData</managed-bean-name>
		<managed-bean-class>de.vogella.jsf.todo.controller.TodoController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>todo</property-name>
			<property-class>de.vogella.jsf.todo.model.Todo</property-class>
			<value>#{todo}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>todo</managed-bean-name>
		<managed-bean-class>de.vogella.jsf.todo.model.Todo</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

</faces-config>
